.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  font-size: 35px;
  padding-top: 30px;
}
.page-container{
  background-image: url('https://img2.baidu.com/it/u=4201790323,1259242876&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=641'); /* 替换成您的图片路径 */
  background-size: cover; /* 可根据需要调整图片的大小适应 */
  background-repeat: no-repeat; /* 防止背景图片重复 */
  background-position: center; /* 图片在容器中居中 */
}
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  font-size: 15px;
}

.detail{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  font-size: 15px;
  padding-top: 30px;
}
.bar{
    display: flex;
    flex-direction: row;
    margin: 1rpx 0;
}
.box{
  width: 50%;
  text-align: center;
  margin-left: 30px; /* 左侧间距 */
  margin-right: 30px; /* 右侧间距 */

}
.box image{
  width: 150rpx;
  height: 150rpx;
  
}
.page_view{
  padding: 25rpx;
  margin: 25rpx;
  background-color: white;
}